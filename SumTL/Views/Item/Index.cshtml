
<div>
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Item List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
        </div>
    </div>
</div>
<div class="render_data"></div>



<script type="text/x-handlebars-template" id="item_list">
        <table class="table table-hover">
            <tr>
                <th>Item Id</th>
                <th>Item Name</th>
                <th>Unit</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
            {{#each rows}}
            <tr>
                <td>{{id}}</td>
                <td>{{id}}</td>
                <td>{{itemName}}</td>
                <td>{{itemUnit}}</td>
                <td>{{quantity}}</td>
                <td>{{category.categoryName}}</td>
                  <td>
                      <button type="button" onclick="Edit({{id}})" class="btn btn-warning">Edit</button>

                      <button type="button" onclick="Delete({{id}})" class="btn btn-danger">Delete</button>
                   </td>
            </tr>
            {{/each}}
        </table>
</script>

<script src="~/js/Item.js"></script>