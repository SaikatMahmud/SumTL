@model List<CategoryDTO>
@if(TempData["msg"] != null)
{
    <h3 class="text-bg-warning">@TempData["msg"]</h3>
}
<div>
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
        </div>
    </div>
</div>
<div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>
                Category Name
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.CategoryName</td>
                <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
                    @* <a asp-controller="Category" asp-action="Details" asp-route-id="@cat.Id" class="btn btn-info">Details</a> *@
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>