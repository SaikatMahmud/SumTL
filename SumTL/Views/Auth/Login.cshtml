@model AppUserDTO

<form id="LoginForm">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Login to your account (Admin/General)</h2>
            <hr />

            <div class="mb-3">
                <label>Username</label>
                <input id="UserName" asp-for="UserName" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input type="password" id="PasswordHash" asp-for="PasswordHash" class="form-control" />
            </div>
        </div>
    </div>
    <input type="button" value="Login" onclick="Login()" class="btn btn-success"/>
</form>

<script src="~/js/Auth.js"></script>